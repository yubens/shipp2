<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/artDevolver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/lblCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="@string/strCantidad"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/checkArt"
        app:layout_constraintTop_toBottomOf="@+id/lblDetalle" />


    <TextView
        android:id="@+id/lblDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="@string/strDetalle"
        android:textAlignment="viewStart"
        app:layout_constraintStart_toEndOf="@+id/checkArt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblPrecioUnitario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:hint="Precio"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/lblCantidad"
        app:layout_constraintTop_toBottomOf="@+id/strPrecio" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="@string/strTotal"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/strPrecio"
        app:layout_constraintTop_toBottomOf="@+id/lblDetalle" />

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="@string/strTotal"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/strPrecio"
        app:layout_constraintTop_toBottomOf="@+id/txtTotal" />

    <EditText
        android:id="@+id/editCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ems="3"
        android:fontFamily="@font/gotham_rounded_medium"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/checkArt"
        app:layout_constraintTop_toBottomOf="@+id/lblCantidad" />

    <CheckBox
        android:id="@+id/checkArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textCant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:hint="Cant"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/editCantidad"
        app:layout_constraintTop_toBottomOf="@+id/lblCantidad" />

    <TextView
        android:id="@+id/strPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="@string/strPrecioUnitario"
        app:layout_constraintStart_toEndOf="@+id/lblCantidad"
        app:layout_constraintTop_toBottomOf="@+id/lblDetalle" />


</android.support.constraint.ConstraintLayout>